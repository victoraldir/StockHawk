<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    app:columnCount="3">

    <TextView
        android:id="@+id/stock_name"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:ellipsize="end"
        android:maxLength="21"
        android:textColor="@color/white"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        tools:text="Microsoft Corporation"
        />

    <TextView
        android:id="@+id/day_highest"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/white"
        android:textStyle="normal"
        app:layout_columnWeight="1"
        app:layout_gravity="right"
        tools:text="$180"
        />

    <android.support.v4.widget.Space
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/base_padding"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"/>

    <TextView
        android:id="@+id/stock_exchange"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textColor="@color/white"
        android:textStyle="normal"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        tools:text="NASDAQ"
        />

    <TextView
        android:id="@+id/day_lowest"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textStyle="normal"
        app:layout_columnWeight="1"
        app:layout_gravity="right"
        tools:text="$94"/>

    <android.support.v4.widget.Space
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/base_padding"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"/>

    <TextView
        android:id="@+id/stock_price"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:paddingEnd="8dp"
        android:paddingStart="0dp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:transitionName="@string/stock_price_transition_name"
        tools:text="$914.15"/>

    <TextView
        android:id="@+id/absolute_change"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_marginBottom="@dimen/base_padding"
        android:layout_marginTop="-3dp"
        android:elevation="4dp"
        android:fontFamily="sans-serif-light"
        android:padding="3dp"
        android:textColor="@color/white"
        android:transitionName="@string/stock_change_transition_name"
        tools:text="+ $0.14"/>

    <TextView
        android:layout_width="0dp"
        android:text=""
        />
</android.support.v7.widget.GridLayout>